<html>
<%  include ../../menus/main-menu %>
<head>
  <link rel="stylesheet" type="text/css" href="/front/css/layout/sku-pictures.css">
  <link rel="stylesheet" type="text/css" href="/front/css/libs/material-input.css">
  <link rel="stylesheet" type="text/css" href="/front/css/libs/material-dropdown.css">

  <script type="text/javascript" src="/front/js/control/sku-pictures.js"></script>
  <script type="text/javascript" src="/front/js/libs/request-helper.js"></script>
  <script type="text/javascript" src="/front/js/libs/dropdown.js"></script>
</head>
<body>


  <div class="main-content">
    <div class="panels">
      <div class="left-panel shadow">

        <label class="sub-title left">Fotos dos Clientes</label>

        <div class="material-input-holder">
          <input type="text" id="insta-post" autocomplete="off" required/>
          <span class="bar"></span>
          <label>Link do Instagram</label>
        </div>
        <div class="separator dotted-top">
          <label>ou</label>
        </div>

        <div class="material-input-holder">
          <input type="text" id="face-post" autocomplete="off" required/>
          <span class="bar"></span>
          <label>Link do Facebook</label>
        </div>

        <div class="product-select">
          <label class="sub-title">Produtos</label>
          <img class="add add-product mini-icon-button" src="img/forward.png">

          <div class="material-input-holder sku-input-holder">
            <input type="text" id="sku" maxlength="50"
            value="" autocomplete="off"
            title="Código do Produto" required/>

            <span class="bar"></span>
            <label>SKU</label>
          </div>
        </div>

        <div class="box-holder">

          <div class="msg-box msg-box-sku">
            <img src="img/error.png" class="icon-error">
            <span class="error-msg-sku"></span>
          </div>

          <div class="sel-box skus-box">


          </div>
        </div>

        <div class="inline-holder">
          <label class="button save shadow">Salvar</label>
        </div>


      </div>

      <div class="main-panel shadow">


        <div class="main-top">
          <label class="sub-title left">Fotos a Aprovar</label>

          <div class="to-be-approved-holder">

          </div>

        </div>

        <div class="main-bottom">
          <label class="sub-title">Fotos aprovadas</label>
          <div class="search-holder">
            <div class="material-input-holder">
              <input type="text" id="search" maxlength="50"
              value="" autocomplete="off"
              title="Código do Produto" required/>

              <span class="bar"></span>
              <label>Pesquisar</label>
            </div>
          </div>

          <div class="approved-images-holder">

          </div>

        </div>


      </div>

    </div>
  </div>

</body>
</html>
