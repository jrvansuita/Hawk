{
  "env": {
    "browser": true,
    "es2020": true,
    "jest": true,
    "jquery": true,
    "node": true,
    "commonjs": true
  },

  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "space-before-function-paren": "off",
    "semi": 0,
    "indent": "off",
    "comma-dangle": "off"
  },

  "ignorePatterns": ["*.ejs"]
}
